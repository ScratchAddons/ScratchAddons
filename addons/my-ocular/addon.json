{
  "name": "Show ocular.jeffalo.net statuses and post reactions",
  "description": "Shows ocular statuses and reactions. Uses jeffalo.net to obtain data.",
  "credits": [
    {
      "name": "Jeffalo"
    }
  ],
  "userscripts": [
    {
      "url": "discuss.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "settingMatch": {
        "id": "discuss",
        "value": true
      }
    },
    {
      "url": "profile.js",
      "matches": ["https://scratch.mit.edu/users/*/"],
      "settingMatch": {
        "id": "profile",
        "value": true
      }
    },
    {
      "url": "reactions.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "settingMatch": {
        "id": "reactions",
        "value": true
      }
    }
  ],
  "userstyles": [
    {
      "url": "discuss.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "settingMatch": {
        "id": "discuss",
        "value": true
      }
    },
    {
      "url": "reactions.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "settingMatch": {
        "id": "reactions",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "name": "Show statuses on profiles",
      "id": "profile",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show statuses on forums",
      "id": "discuss",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show reaction buttons and \"View on ocular\" link",
      "id": "reactions",
      "type": "boolean",
      "default": true
    }
  ],
  "tags": ["forums", "profiles", "community"],
  "enabledByDefault": false,
  "l10n": true
}
