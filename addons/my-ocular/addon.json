{
  "name": "Ocular integration",
  "description": "Shows ocular statuses and forum post reactions. Uses my-ocular.jeffalo.net to obtain data.",
  "credits": [
    {
      "name": "Jeffalo",
      "link": "https://github.com/jeffalo"
    }
  ],
  "userscripts": [
    {
      "url": "discuss.js",
      "matches": ["topics"],
      "if": {
        "settings": { "discuss": true }
      }
    },
    {
      "url": "profile.js",
      "matches": ["https://scratch.mit.edu/users/*/"],
      "if": {
        "settings": { "profile": true }
      }
    },
    {
      "url": "reactions.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "if": {
        "settings": { "reactions": true }
      }
    }
  ],
  "userstyles": [
    {
      "url": "status-dot.css",
      "matches": ["topics", "https://scratch.mit.edu/users/*/"],
      "if": {
        "settings": { "discuss": true }
      }
    },
    {
      "url": "reactions.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "if": {
        "settings": { "reactions": true }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "settings": [
    {
      "name": "Show statuses on profiles",
      "id": "profile",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show statuses on forums",
      "id": "discuss",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show statuses ",
      "id": "show-status",
      "type": "select",
      "potentialValues": [
        {
          "id": "everywhere",
          "name": "everywhere"
        },
        {
          "id": "others",
          "name": "only on other's profiles"
        }
      ],
      "default": "everywhere"
    },
    {
      "name": "Show reaction buttons and \"View on ocular\" link",
      "id": "reactions",
      "type": "boolean",
      "default": true
    }
  ],
  "versionAdded": "1.4.0",
  "tags": ["forums", "profiles", "community"],
  "enabledByDefault": false,
  "latestUpdate": {
    "version": "1.29.0",
    "temporaryNotice": "Code re-write and new setting!",
    "newSettings": ["show-status"]
  }
}
