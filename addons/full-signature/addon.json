{
  "name": "Full areas",
  "description": "Shows the full content of areas with limited height, such as user signatures on the forums and What I've been doing on profiles, by making them resizable or scrollable.",
  "credits": [
    {
      "name": "GrahamSH"
    },
    {
      "name": "NitroCipher/ZenithRogue"
    },
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber/"
    },
    {
      "name": "cobalt",
      "link": "https://github.com/cobaltt7"
    }
  ],
  "settings": [
    {
      "name": "What I've been doing",
      "id": "whatworkingon",
      "type": "boolean",
      "default": true
    },
    {
      "name": "What's Happening?",
      "id": "whathappen",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Project titles",
      "id": "titles",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Forum signatures",
      "id": "signature",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Forum Scratchblocks",
      "id": "blocks",
      "type": "boolean",
      "default": true
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "userscripts": [
    {
      "url": "working.js",
      "matches": ["https://scratch.mit.edu/users/*"]
    },
    {
      "url": "happen.js",
      "matches": ["https://scratch.mit.edu/"],
      "runAtComplete": false
    },
    {
      "url": "resetScroll.js",
      "matches": ["projects", "profiles", "topics"]
    }
  ],
  "userstyles": [
    {
      "url": "signature.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*", "https://scratch.mit.edu/discuss/settings/*"],
      "if": {
        "settings": { "signature": true }
      }
    },
    {
      "url": "blocks.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "if": {
        "settings": { "blocks": true }
      }
    },
    {
      "url": "working.css",
      "matches": ["https://scratch.mit.edu/users/*"],
      "if": {
        "settings": { "whatworkingon": true }
      }
    },
    {
      "url": "happen.css",
      "matches": ["https://scratch.mit.edu/"],
      "if": {
        "settings": { "whathappen": true }
      }
    },
    {
      "url": "titles.css",
      "matches": ["projects"],
      "if": {
        "settings": { "titles": true }
      }
    }
  ],
  "versionAdded": "1.0.0",
  "latestUpdate": {
    "version": "1.43.0",
    "newSettings": ["titles"]
  },
  "tags": ["community", "forums", "recommended", "profiles"],
  "relatedAddons": ["infinite-scroll"],
  "enabledByDefault": true
}
