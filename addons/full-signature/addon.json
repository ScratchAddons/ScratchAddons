{
  "name": "Show full areas",
  "description": "Shows the full signature of users on the forums, and shows full What I've been doing on profiles.",
  "credits": [
    {
      "name": "GrahamSH"
    },
    {
      "name": "NitroCipher/ZenithRogue"
    },
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber"
    }
  ],
  "settings": [
    {
      "name": "Show scroll for forum signatures",
      "id": "signature",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show scroll for \"What I've been doing\"",
      "id": "whatworkingon",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Show scroll for \"What's Happening?\"",
      "id": "whathappen",
      "type": "boolean",
      "default": true
    }
  ],
  "userscripts": [
    {
      "url": "working.js",
      "matches": ["https://scratch.mit.edu/users/*"],
      "settingMatch": {
        "id": "whatworkingon",
        "value": true
      }
    },
    {
      "url": "happen.js",
      "matches": ["https://scratch.mit.edu/"],
      "settingMatch": {
        "id": "whathappen",
        "value": true
      }
    }
  ],
  "userstyles": [
    {
      "url": "signature.css",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"],
      "settingMatch": {
        "id": "signature",
        "value": true
      }
    },
    {
      "url": "working.css",
      "matches": ["https://scratch.mit.edu/users/*"],
      "settingMatch": {
        "id": "whatworkingon",
        "value": true
      }
    },
    {
      "url": "happen.css",
      "matches": ["https://scratch.mit.edu/"],
      "settingMatch": {
        "id": "whathappen",
        "value": true
      }
    }
  ],
  "tags": ["community", "forums", "recommended"],
  "enabledByDefault": true,
  "l10n": true
}
