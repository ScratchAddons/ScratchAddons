{
  "name": "Project volume slider",
  "description": "Adds a volume slider next to the green flag controls.",
  "credits": [
    {
      "name": "samq64",
      "link": "https://scratch.mit.edu/users/samq64/"
    },
    {
      "name": "GarboMuffin"
    },
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects", "projectEmbeds"]
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["projects", "projectEmbeds"]
    },
    {
      "url": "hover.css",
      "matches": ["projects", "projectEmbeds"],
      "if": {
        "settings": { "always": false }
      }
    }
  ],
  "settings": [
    {
      "name": "Default volume",
      "id": "defVol",
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 100
    },
    {
      "name": "Always show slider",
      "id": "always",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "versionAdded": "1.29.0",
  "latestUpdate": {
    "version": "1.32.0",
    "newSettings": ["always"],
    "isMajor": true
  },
  "tags": ["editor", "projectPlayer", "recommended"]
}
