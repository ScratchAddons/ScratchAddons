{
  "name": "Ctrl+Enter to post",
  "description": "Automatically posts the comment or forum post on Ctrl+Enter.",
  "credits": [
    {
      "name": "Weredime (9gr)",
      "link": "https://scratch.mit.edu/users/9gr/"
    }
  ],
  "info": [
    {
      "text": "On macOS, you can also use the Cmd key.",
      "id": "macOS"
    }
  ],
  "settings": [
    {
      "id": "comments",
      "name": "Enable in comments",
      "type": "boolean",
      "default": true
    },
    {
      "id": "forums",
      "name": "Enable on forums",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "userscripts": [
    {
      "url": "forums.js",
      "matches": ["editingScreens", "https://scratch.mit.edu/discuss/misc/*"],
      "if": {
        "settings": {
          "forums": true
        }
      }
    },
    {
      "url": "comments.js",
      "matches": ["https://scratch.mit.edu/studios/*", "https://scratch.mit.edu/users/*", "projects"],
      "if": {
        "settings": {
          "comments": true
        }
      }
    }
  ],
  "versionAdded": "1.18.0",
  "tags": ["community"],
  "enabledByDefault": false
}
