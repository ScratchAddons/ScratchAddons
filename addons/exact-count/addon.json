{
  "name": "Show exact count",
  "description": "Shows exact numbers on profiles and the exact project count in studios.",
  "credits": [
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber/"
    },
    {
      "name": "Maximouse",
      "link": "https://mxmou.github.io/exactcount"
    },
    {
      "name": "World_Languages"
    }
  ],
  "info": [
    {
      "id": "setting-removal",
      "text": "The forum setting has been removed since the ScratchDB database used by it is offline."
    }
  ],
  "settings": [
    {
      "name": "Exact counts for profiles",
      "id": "user",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Exact count for studios",
      "id": "studio",
      "type": "boolean",
      "default": true
    }
  ],
  "userscripts": [
    {
      "url": "user.js",
      "matches": ["https://scratch.mit.edu/users/*/"],
      "if": {
        "settings": { "user": true }
      }
    },
    {
      "url": "studio.js",
      "matches": ["studios"],
      "if": {
        "settings": { "studio": true }
      }
    }
  ],
  "userstyles": [
    {
      "url": "studio.css",
      "matches": ["studios"],
      "if": {
        "settings": { "studio": true }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.2.0",
  "tags": ["community", "recommended", "profiles", "studios"],
  "enabledByDefault": false
}
