  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "versionAdded": "1.0.0",
  "updateUserstylesOnSettingsChange": true,
  "userscripts": [
    {
      "url": "bubbles.js",
      "matches": ["projects"]
    },
    {
      "url": "paper.js",
      "matches": ["projects"],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "experimental_editor.css",
      "matches": ["projects"]
    },
    {
      "url": "text-shadow.css",
      "matches": ["projects"],
      "if": {
        "settings": { "textShadow": true }
      }
    },
    {
      "url": "hide_dots.css",
      "matches": ["projects"],
      "if": {
        "settings": { "dots": false }
      }
    },
    {
      "url": "paper.css",
      "matches": ["projects"],
      "if": {
        "settings": { "affectPaper": true }
      }
    },
    {
      "url": "stage.css",
      "matches": ["projects"],
      "if": {
        "settings": { "affectStage": true }
      }
    },
    {
      "url": "dark_comments.css",
      "matches": ["projects"],
      "if": {
        "settings": { "darkComments": true }
      }
    },
    {
      "url": "scrollbar.css",
      "matches": ["projects"],
      "if": {
        "settings": { "darkScrollbars": true }
      }
    }
  ],
  "settings": [
    {
      "name": "Page background",
      "id": "page",
      "type": "color",
      "default": "#111111"
    },
    {
      "name": "Highlight color",
      "id": "primary",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "name": "Text and icon highlight color",
      "id": "highlightText",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "name": "Menu bar background",
      "id": "menuBar",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Active tab background",
      "id": "activeTab",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Inactive tab background",
      "id": "tab",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "Sprite pane background",
      "id": "selector",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Costume/sound list background",
      "id": "selector2",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Selected sprite/costume/sound background",
      "id": "selectorSelection",
      "type": "color",
      "default": "#111111"
    },
    {
      "name": "Accent background",
      "id": "accent",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "Input background",
      "id": "input",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Code area background",
      "id": "workspace",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "Block category menu background",
      "id": "categoryMenu",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Block palette background",
      "id": "palette",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Full screen background",
      "id": "fullscreen",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "Full screen header background",
      "id": "stageHeader",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "Border color",
      "id": "border",
      "type": "color",
      "default": "#ffffff0d",
      "allowTransparency": true
    },
    {
      "name": "Show workspace dots",
      "id": "dots",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Text shadow on blocks",
      "id": "textShadow",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Change the costume editor background and selection borders",
      "id": "affectPaper",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Change the colors of variables, lists, speech bubbles, and answer inputs on the stage",
      "id": "affectStage",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Dark comments",
      "id": "darkComments",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Dark scrollbars",
      "id": "darkScrollbars",
      "type": "boolean",
      "default": true
    }
  ],
