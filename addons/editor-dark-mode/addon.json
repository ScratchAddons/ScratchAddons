{
  "name": "Editor dark mode",
  "description": "Dark mode for the Scratch 3.0 project editor. Multiple options by different authors available.",
  "credits": [
    {
      "name": "infinitytec (3.Dark, 3.Darker)",
      "link": "https://github.com/infinitytec"
    },
    {
      "name": "_nix (Dark editor)",
      "link": "https://github.com/towerofnix"
    },
    {
      "name": "Maximouse (Experimental Dark)",
      "link": "https://github.com/mxmou/customize-scratch"
    }
  ],
  "userstyles": [
    {
      "url": "dark-editor.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "dark-editor"
      }
    },
    {
      "url": "3dark.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "3-dark"
      }
    },
    {
      "url": "3darker.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "3-darker"
      }
    },
    {
      "url": "experimental_editor.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "selectedMode",
        "value": "experimental-dark"
      }
    },
    {
      "url": "global.css",
      "matches": ["https://scratch.mit.edu/projects/*"]
    },
    {
      "url": "text-shadow.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "textShadow",
        "value": true
      }
    },
    {
      "url": "toggle-dots.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "toggledots",
        "value": false
      }
    }
  ],
  "settings": [
    {
      "name": "Dark mode version",
      "id": "selectedMode",
      "type": "select",
      "potentialValues": [
        {
          "id": "3-darker",
          "name": "3.Darker"
        },
        {
          "id": "3-dark",
          "name": "3.Dark"
        },
        {
          "id": "dark-editor",
          "name": "Dark Editor"
        },
        {
          "id": "experimental-dark",
          "name": "Experimental Dark"
        }
      ],
      "default": "3-darker"
    },
    {
      "name": "Text shadow on blocks",
      "id": "textShadow",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Toggle dots",
      "id": "toggledots",
      "type": "boolean",
      "default": false
    }
  ],
  "tags": ["editor", "theme"],
  "enabledByDefault": false,
  "l10n": true
}
