{
  "name": "Editor dark mode and customizable colors",
  "description": "Customize colors used by the project editor. Multiple dark themes by different authors available. If you don't need dark mode but want to change the default colors you can select the \"Scratch's default colors\" preset and tweak it.",
  "credits": [
    {
      "name": "Maximouse (addon, \"Experimental\" Dark)",
      "link": "https://github.com/mxmou/customize-scratch"
    },
    {
      "name": "infinitytec (3.Dark, 3.Darker)",
      "link": "https://github.com/infinitytec"
    },
    {
      "name": "_nix (Dark editor)",
      "link": "https://github.com/towerofnix"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "updateUserstylesOnSettingsChange": true,
  "userscripts": [
    {
      "url": "text_color.js",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "experimental_editor.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ]
    },
    {
      "url": "text-shadow.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "textShadow",
        "value": true
      }
    },
    {
      "url": "dark_comments.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "darkComments",
        "value": true
      }
    },
    {
      "url": "scrollbar.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "darkScrollbars",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "name": "Page background",
      "id": "page",
      "type": "color",
      "default": "#111111"
    },
    {
      "name": "Highlight color",
      "id": "primary",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "name": "Menu bar background",
      "id": "menuBar",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Active tab background",
      "id": "activeTab",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Inactive tab background",
      "id": "tab",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "Sprite list background",
      "id": "selector",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Asset list background",
      "id": "selector2",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Selected list item background",
      "id": "selectorSelection",
      "type": "color",
      "default": "#111111"
    },
    {
      "name": "Accent background",
      "id": "accent",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "Input background",
      "id": "input",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Workspace background",
      "id": "workspace",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "Block category menu background",
      "id": "categoryMenu",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Block palette background",
      "id": "palette",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "Full screen background",
      "id": "fullscreen",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "Full screen header background",
      "id": "stageHeader",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "Border color",
      "id": "border",
      "type": "color",
      "default": "#ffffff0d",
      "allowTransparency": true
    },
    {
      "name": "Show workspace dots",
      "id": "dots",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Text shadow on blocks",
      "id": "textShadow",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Dark comments",
      "id": "darkComments",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Dark scrollbars",
      "id": "darkScrollbars",
      "type": "boolean",
      "default": true
    }
  ],
  "presets": [
