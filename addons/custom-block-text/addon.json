{
  "name": "Customizable block text style",
  "description": "Allows you to adjust the size and font weight of block text or add a shadow to make it easier to read.",
  "tags": ["editor", "codeEditor", "featured"],
  "credits": [
    {
      "name": "Secret-chest",
      "link": "https://github.com/Secret-chest"
    },
    {
      "name": "_nix",
      "link": "https://github.com/towerofnix"
    },
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "settings": [
    {
      "name": "Text size (%)",
      "id": "size",
      "type": "integer",
      "min": 75,
      "max": 200,
      "default": 100
    },
    {
      "name": "Bold text",
      "id": "bold",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Shadow under text",
      "id": "shadow",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.24.0",
  "latestUpdate": {
    "version": "1.35.0",
    "newSettings": ["size"],
    "isMajor": true
  },
  "enabledByDefault": false
}
