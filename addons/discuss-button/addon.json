{
  "name": "Customizable navigation bar",
  "description": "Choose a list of links to be displayed in the navigation bar.",
  "userscripts": [
    {
      "url": "items_scratchwww.js",
      "matches": ["scratchWWWNoProject", "projects"],
      "runAtComplete": false
    },
    {
      "url": "items_scratchr2.js",
      "matches": ["isNotScratchWWW", "https://scratch.mit.edu/403", "https://scratch.mit.edu/404"],
      "runAtComplete": false
    },
    {
      "url": "compact_scratchwww.js",
      "matches": ["scratchWWWNoProject", "projects"],
      "runAtComplete": false
    },
    {
      "url": "compact_scratchr2.js",
      "matches": ["isNotScratchWWW", "https://scratch.mit.edu/403", "https://scratch.mit.edu/404"],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "compact-nav.css",
      "matches": ["https://scratch.mit.edu/*", "https://scratch.mit.edu/403", "https://scratch.mit.edu/404"],
      "if": {
        "settings": {
          "compact-nav": true
        }
      }
    },
    {
      "url": "stick.css",
      "matches": ["https://scratch.mit.edu/*"],
      "if": {
        "settings": {
          "stick": "page"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Items",
      "id": "items",
      "type": "table",
      "default": [
        { "name": "Create", "url": "/projects/editor/", "visibility": "always" },
        { "name": "Explore", "url": "/explore/projects/all", "visibility": "always" },
        { "name": "Ideas", "url": "/ideas", "visibility": "always" },
        { "name": "Membership", "url": "/membership", "visibility": "loggedOut" }
      ],
      "row": [
        {
          "name": "Name",
          "id": "name",
          "type": "string",
          "default": ""
        },
        {
          "name": "URL",
          "id": "url",
          "type": "untranslated",
          "default": ""
        },
        {
          "name": "Visibility",
          "id": "visibility",
          "type": "select",
          "potentialValues": [
            {
              "id": "always",
              "name": "Always"
            },
            {
              "id": "loggedIn",
              "name": "When logged in"
            },
            {
              "id": "loggedOut",
              "name": "When not logged in"
            }
          ],
          "default": "always"
        }
      ],
      "presets": [
        {
          "name": "Create",
          "values": { "name": "Create", "url": "/projects/editor/", "visibility": "always" }
        },
        {
          "name": "Explore",
          "values": { "name": "Explore", "url": "/explore/projects/all", "visibility": "always" }
        },
        {
          "name": "Ideas",
          "values": { "name": "Ideas", "url": "/ideas", "visibility": "always" }
        },
        {
          "name": "Membership",
          "values": { "name": "Membership", "url": "/membership", "visibility": "loggedOut" }
        },
        {
          "name": "About",
          "values": { "name": "About", "url": "/about", "visibility": "always" }
        },
        {
          "name": "Discuss",
          "values": { "name": "Discuss", "url": "/discuss", "visibility": "always" }
        },
        {
          "name": "Wiki",
          "values": { "name": "Wiki", "url": "https://scratch-wiki.info/", "visibility": "always" }
        }
      ]
    },
    {
      "name": "Compact user dropdown",
      "id": "compact-nav",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Stick to",
      "id": "stick",
      "type": "select",
      "default": "screen",
      "potentialValues": [
        {
          "id": "screen",
          "name": "Top of screen"
        },
        {
          "id": "page",
          "name": "Top of page"
        }
      ]
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.0.0",
  "latestUpdate": {
    "version": "1.32.0",
    "newSettings": ["stick"],
    "isMajor": false
  },
  "tags": ["community", "featured"],
  "relatedAddons": ["custom-menu-bar", "expanding-search-bar"],
  "enabledByDefault": false,
  "updateUserstylesOnSettingsChange": true
}
