{
  "name": "Scratch Notifier",
  "description": "Notifications on new Scratch messages. Click the notification to go straight to the message (comment, project, etc.)",
  "credits": [
    {
      "name": "World_Languages"
    },
    {
      "name": "NitroCipher/ZenithRogue"
    },
    {
      "name": "notificationsounds.com (Scratch Addons ping)"
    }
  ],
  "permissions": ["notifications"],
  "persistentScripts": ["background.js"],
  "settings": [
    {
      "name": "Mark all messages as read after clicking notification",
      "id": "mark_as_read_when_clicked",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Notification sound",
      "id": "notification_sound",
      "type": "select",
      "potentialValues": ["Silent", "System default", "Scratch Addons ping"],
      "default": "System default"
    },
    {
      "name": "@comment.svg Notify profile comments & replies",
      "id": "commentsforme_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@comment.svg Notify comments on my projects",
      "id": "commentsonmyprojects_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@forum.svg Notify forum activity",
      "id": "forumpost_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@heart.svg Notify loves",
      "id": "loveproject_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@star.svg Notify favorites",
      "id": "favoriteproject_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@follow.svg Notify new followers",
      "id": "followuser_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@studio-add.svg Notify studio invites",
      "id": "curatorinvite_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@studio.svg Notify studio activity",
      "id": "studioactivity_notifications",
      "type": "boolean",
      "default": true
    },
    {
      "name": "@remix.svg Notify remixes",
      "id": "remixproject_notifications",
      "type": "boolean",
      "default": true
    }
  ],
  "tags": ["community", "recommended"],
  "enabledByDefault": false
}
