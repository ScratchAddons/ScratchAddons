{
  "name": "Line breaks in comments",
  "description": "Makes line breaks (pressing Enter) in comments on the website visible instead of converting them to spaces.",
  "credits": [
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["profiles"],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "break-spaces.css",
      "matches": ["studios", "projects"]
    },
    {
      "url": "scrollbars.css",
      "matches": ["studios", "projects"],
      "if": {
        "settings": {
          "scrollbars": true
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Add scroll bars to tall comments",
      "id": "scrollbars",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "versionAdded": "1.8.0",
  "latestUpdate": {
    "version": "1.23.0",
    "newSettings": ["scrollbars"]
  },
  "tags": ["community", "comments"]
}
