{
  "name": "Line breaks in comments",
  "description": "Allows adding line breaks (by pressing Enter/Return) in comments you're writing.",
  "credits": [
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber/"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["profiles"],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "break-spaces.css",
      "matches": ["studios", "projects"]
    },
    {
      "url": "scrollbars.css",
      "matches": ["studios", "projects"],
      "if": {
        "settings": {
          "scrollbars": true
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Add scroll bars to tall comments",
      "id": "scrollbars",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Maximum number of lines visible at once",
      "id": "height",
      "type": "integer",
      "min": 1,
      "max": 100,
      "default": 5,
      "if": {
        "settings": {
          "scrollbars": true
        }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "versionAdded": "1.8.0",
  "latestUpdate": {
    "version": "1.29.0",
    "newSettings": ["scrollbars", "height"]
  },
  "tags": ["community", "comments"]
}
