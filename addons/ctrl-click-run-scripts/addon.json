{
  "name": "Customizable action to run scripts",
  "description": "Change the method used to trigger blocks and scripts to run.",
  "credits": [
    {
      "name": "lisa_wolfgang",
      "link": "https://github.com/lisa-wolfgang"
    },
    {
      "name": "apple502j",
      "link": "https://github.com/apple502j"
    },
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "settings": [
    {
      "name": "Run by...",
      "id": "run-action",
      "type": "select",
      "potentialValues": [
        {
          "id": "single",
          "name": "Clicking once"
        },
        {
          "id": "double",
          "name": "Clicking twice"
        },
        {
          "id": "ctrl",
          "name": "Ctrl-clicking"
        }
      ],
      "default": "single"
    },
    {
      "name": "Double-click timeout (ms)",
      "id": "timeout",
      "type": "integer",
      "min": 200,
      "max": 1000,
      "default": 500,
      "if": { "settings": { "run-action": ["single", "double"] } }
    }
  ],
  "tags": ["editor", "codeEditor"],
  "versionAdded": "1.15.0",
  "latestUpdate": {
    "version": "1.44.0",
    "newSettings": ["run-action"],
    "temporaryNotice": "This addon used to be called \"Ctrl+Click to run scripts\" \u2014 new options have now been added."
  },
  "enabledByDefault": false
}
