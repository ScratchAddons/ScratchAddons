{
  "name": "Highlight mentions",
  "description": "Highlight when you are mentioned (e.g. @username).",
  "tags": ["community", "profiles", "comments", "forums"],
  "versionAdded": "1.40.0",
  "customCssVariables": [
    {
      "name": "button-text",
      "value": {
        "type": "textColor",
        "black": "#000",
        "white": "#fff",
        "source": {
          "type": "settingValue",
          "settingId": "color"
        }
      }
    }
  ],
  "userscripts": [
    {
      "matches": ["projects", "studios", "profiles", "forums"],
      "url": "userscript.js"
    }
  ],
  "userstyles": [
    {
      "matches": ["projects", "studios", "profiles", "forums"],
      "url": "userstyle.css"
    }
  ],
  "settings": [
    {
      "name": "Highlight color",
      "id": "color",
      "type": "color",
      "default": "#855cd6"
    },
    {
      "name": "Highlight direct links",
      "id": "direct",
      "type": "boolean",
      "default": false
    }
  ],
  "credits": [
    {
      "name": "mybearworld",
      "link": "https://scratch.mit.edu/users/mybearworld"
    },
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "dynamicDisable": true,
  "dynamicEnable": true
}
