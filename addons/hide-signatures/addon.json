{
  "name": "Hide signatures on forums",
  "description": "Hides signatures in forum posts and adds a \"Show signature\" button.",
  "credits": [
    {
      "name": "Verixion",
      "link": "https://scratch.mit.edu/users/Verixion/"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["topics"],
      "runAtComplete": true
    }
  ],
  "settings": [
    {
      "name": "Hide signatures by default",
      "type": "boolean",
      "default": true,
