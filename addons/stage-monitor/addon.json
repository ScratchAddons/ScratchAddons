{
  "name": "Customizable stage monitors",
  "description": "Changes the color and border radius of variables and lists on the stage.",
  "credits": [
    {
      "name": "Samq64",
      "link": "https://scratch.mit.edu/users/samq64/"
    },
    {
      "name": "Maximouse",
      "link": "https://scratch.mit.edu/users/Maximouse/"
    }
  ],
  "userstyles": [
    {
      "url": "monitors.css",
      "matches": ["projects"]
    },
    {
      "url": "value_color.css",
      "matches": ["projects"],
      "if": {
        "settings": { "custom-value": true }
      }
    }
  ],
  "customCssVariables": [
    {
      "name": "valueText",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "value"
        }
      }
    },
    {
      "name": "headerText",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "header"
        }
      }
    },
    {
      "name": "bgText",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "bg"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "Border radius (px)",
      "id": "radius",
      "type": "integer",
      "min": 0,
      "max": 11,
      "default": 4
    },
    {
      "name": "Value border radius (px)",
      "id": "value-radius",
      "type": "integer",
      "min": 0,
      "max": 11,
      "default": 4
    },
    {
      "name": "Monitor Color",
      "id": "bg",
      "type": "color",
      "allowTransparency": true,
      "default": "#e5f0ff"
    },
    {
      "name": "List header color",
      "id": "header",
      "type": "color",
      "allowTransparency": true,
      "default": "#ffffff"
    },
    {
      "name": "One value color",
      "id": "custom-value",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Value color",
      "id": "value",
      "type": "color",
      "allowTransparency": true,
      "default": "#333333",
      "if": {
        "settings": { "custom-value": true }
      }
    }
  ],
  "presets": [
    {
      "name": "Transparent values",
      "id": "transparent",
      "description": "Scratch's default monitors with transparent value backgrounds.",
      "values": {
        "radius": 4,
        "bg": "#e5f0ff",
        "header": "#ffffff",
        "custom-value": true,
        "value": "#ffffff00"
      }
    },
    {
      "name": "2.0 monitors",
      "id": "scratch2",
      "description": "Makes monitors look more like they did in Scratch 2.0",
      "values": {
        "radius": 4,
        "value-radius": 4,
        "bg": "#c1c4c7",
        "header": "#c1c4c7",
        "custom-value": false
      }
    },
    {
      "name": "Translucent black",
      "id": "translucent",
      "description": "Translucent black monitors like in HTMLifier.",
      "values": {
        "radius": 4,
        "value-radius": 4,
        "bg": "#00000040",
        "header": "#00000040",
        "custom-value": true,
        "value": "#00000040"
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "injectAsStyleElt": true,
  "tags": ["editor", "theme", "projectPlayer"],
  "versionAdded": "1.24.0",
  "enabledByDefault": false
}
