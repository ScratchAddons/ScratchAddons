{
  "name": "Project formatter",
  "description": "Adds an opinionated formatter to your projects for more readability.",
  "credits": [
    {
      "name": "Hammouda101010"
    }
  ],
  "dynamicEnable": false,
  "dynamicDisable": false,
  "settings": [
    {
      "name": "@addtosettingsmenu.svg Save Rules with Project",
      "description": "Rules will be automaticaly saved when you also save your project. (onto the website manualy or automaticaly, your computer, copying it, etc)",
      "id": "save-with-project",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Log to Debugger",
      "id": "debugger-support",
      "type": "boolean",
      "default": true,
      "if": {
        "addonEnabled": ["debugger"]
      }
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    },
    {
      "url": "edit-menu.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["projects"]
    }
  ],
  "info": [
    {
      "type": "info",
      "text": "Fun fact: this addon was originaly supposed to be an extension for TurboWarp.",
      "id": "projectFormatterFunfact"
    }
  ],
  "libraries": ["scratch-vm", "scratch-gui"],
  "versionAdded": "1.4.3",
  "latestUpdate": {
    "isMajor": true,
    "version": "1.4.3"
  },
  "tags": ["editor", "editorMenuBar", "codeEditor", "costumeEditor", "beta"],
  "enabledByDefault": false
}
