      "link": "http://scratch.mit.edu/users/greeny--231"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.2.0",
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    },
    {
      "url": "spriteCount.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["projects"]
    }
  ],
  "settings": [
    {
      "id": "projectpage",
      "name": "Show on project page",
      "default": false,
      "type": "boolean"
    },
    {
      "id": "showicononly",
      "name": "Show icon only",
      "default": false,
      "type": "boolean"
    },
    {
      "id": "showSpriteCount",
      "name": "Show individual counts for each sprite",
      "default": false,
      "type": "boolean"
    }
  ],
  "latestUpdate": {
    "version": "1.39.0",
    "newSettings": ["showSpriteCount"],
    "isMajor": true,
    "temporaryNotice": "You can now display the number of clones for each sprite in the project editor."
