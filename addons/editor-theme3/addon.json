{
  "name": "Customizable block colors",
  "description": "Edit block colors for each category in the editor.",
  "credits": [
    {
      "name": "NitroCipher/ZenithRogue"
    },
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber"
    }
  ],
  "latestUpdate": {
    "version": "1.24.0",
    "temporaryNotice": "New setting to enable changing the colors of blocks in the forums.",
    "newSettings": ["forums"]
  },
  "customCssVariables": [
    {
      "name": "inputColor-text",
      "value": {
        "type": "textColor",
        "source": {
          "type": "settingValue",
          "settingId": "input-color"
        }
      }
    },
    {
      "name": "inputColor-forumText",
      "value": {
        "type": "textColor",
        "black": "#000000",
        "source": {
          "type": "settingValue",
          "settingId": "input-color"
        }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "versionAdded": "1.2.0",
  "updateUserstylesOnSettingsChange": true,
  "userscripts": [
    {
      "url": "theme3.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "theme3.css",
      "matches": ["projects"]
    },
    {
      "url": "forums/base.css",
      "matches": ["editingScreens"],
      "if": {
        "settings": { "forums": true }
      }
    },
    {
      "url": "forums/black_text.css",
      "matches": ["editingScreens"],
      "if": {
        "settings": {
          "forums": true,
          "text": "black"
        }
      }
    },
    {
      "url": "forums/color_on_white.css",
      "matches": ["editingScreens"],
      "if": {
        "settings": {
          "forums": true,
          "text": "colorOnWhite"
        }
      }
    },
    {
      "url": "forums/color_on_black.css",
      "matches": ["editingScreens"],
      "if": {
        "settings": {
          "forums": true,
          "text": "colorOnBlack"
        }
      }
    }
  ],
  "settings": [
    {
      "name": "motion",
      "id": "motion-color",
      "type": "color",
      "default": "#4C97FF",
      "allowTransparency": true
    },
    {
      "name": "looks",
      "id": "looks-color",
      "type": "color",
      "default": "#9966FF",
      "allowTransparency": true
    },
    {
      "name": "sounds",
      "id": "sounds-color",
      "type": "color",
      "default": "#CF63CF",
      "allowTransparency": true
    },
    {
      "name": "events",
      "id": "events-color",
      "type": "color",
      "default": "#FFBF00",
      "allowTransparency": true
    },
    {
      "name": "control",
      "id": "control-color",
      "type": "color",
      "default": "#FFAB19",
      "allowTransparency": true
    },
    {
      "name": "sensing",
      "id": "sensing-color",
      "type": "color",
      "default": "#5CB1D6",
      "allowTransparency": true
    },
    {
      "name": "operators",
      "id": "operators-color",
      "type": "color",
      "default": "#59C059",
      "allowTransparency": true
    },
    {
      "name": "variables",
      "id": "data-color",
      "type": "color",
      "default": "#FF8C1A",
      "allowTransparency": true
    },
    {
      "name": "lists",
      "id": "data-lists-color",
      "type": "color",
      "default": "#FF661A",
      "allowTransparency": true
    },
    {
      "name": "custom",
      "id": "custom-color",
      "type": "color",
      "default": "#FF6680",
      "allowTransparency": true
    },
    {
      "name": "extensions",
      "id": "Pen-color",
      "type": "color",
      "default": "#0FBD8C",
      "allowTransparency": true
    },
    {
      "name": "Scratch Addons blocks",
      "id": "sa-color",
      "type": "color",
      "default": "#29BEB8",
      "allowTransparency": true,
      "if": {
        "addonEnabled": ["debugger"]
      }
    },
    {
      "name": "Block inputs",
      "id": "input-color",
      "type": "color",
      "default": "#FFFFFF"
    },
    {
      "name": "Text color",
      "id": "text",
      "type": "select",
      "default": "white",
      "potentialValues": [
        {
          "id": "white",
          "name": "White"
        },
        {
          "id": "black",
          "name": "Black"
        },
        {
          "id": "colorOnWhite",
          "name": "Colored on white background"
        },
        {
          "id": "colorOnBlack",
          "name": "Colored on black background"
        }
      ]
    },
    {
      "name": "Change the colors of blocks in the forums",
      "id": "forums",
      "type": "boolean",
      "default": false
    }
  ],
  "tags": ["editor", "theme", "codeEditor", "featured"],
  "enabledByDefault": false,
  "presets": [
    {
