{
  "name": "Improve dragging costumes and sounds",
  "description": "Adds auto-scrolling to the assets panel and fixes a bug where dragging while scrolling doesn't place the asset as expected.",
  "credits": [
    {
      "name": "mysinginmonsters",
      "link": "https://scratch.mit.edu/users/mysinginmonsters/"
    }
  ],
  "settings": [
    {
      "name": "Auto-scroll speed",
      "id": "scroll-speed",
      "type": "select",
      "description": "Drag a costume or sound at the top or bottom of the asset panel to auto-scroll",
      "potentialValues": [
        {
          "id": "none",
          "name": "None"
        },
        {
          "id": "slow",
          "name": "Slow"
        },
        {
          "id": "default",
          "name": "Default"
        },
        {
          "id": "fast",
          "name": "Fast"
        }
      ],
      "default": "default"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["projects"]
    }
  ],
  "tags": ["editor", "costumeEditor"],
  "versionAdded": "1.44.0",
  "dynamicEnable": true,
  "dynamicDisable": true
}
