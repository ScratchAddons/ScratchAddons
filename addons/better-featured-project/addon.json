{
  "name": "Profile page banner",
  "description": "Turns the featured project on any user's profile into a nice-looking banner.",
  "credits": [
    {
      "name": "Wicycool",
      "link": "https://wicy.cool/"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/users/*/"],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": ["https://scratch.mit.edu/users/*/"]
    },
    {
      "url": "scratchr2.css",
      "matches": ["https://scratch.mit.edu/users/*/"],
      "if": {
        "addonEnabled": ["scratchr2"]
      }
    }
  ],
  "settings": [
    {
      "id": "blur",
      "name": "Banner blur",
      "type": "integer",
      "min": 0,
      "max": 5,
      "default": 0
    }
  ],
  "versionAdded": "1.5.0",
  "dynamicEnable": true,
  "dynamicDisable": true,
  "tags": ["community", "featured", "profiles"]
}
