{
  "name": "Sprite and script count",
  "description": "Shows the number of sprites and scripts a project has next to the Remix button.",
  "tags": ["community", "projectPage", "featured"],
  "credits": [
    {
      "name": "TheColaber",
      "link": "https://scratch.mit.edu/users/TheColaber/"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "updateUserstylesOnSettingsChange": true,
  "userscripts": [
    {
      "url": "projectstats.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "userscript.css",
      "matches": ["projects"]
    },
    {
      "url": "text-only.css",
      "matches": ["projects"],
      "if": {
        "settings": { "show": "text" }
      }
    }
  ],
  "settings": [
    {
      "name": "Show...",
      "id": "show",
      "type": "select",
      "potentialValues": [
        {
          "id": "both",
          "name": "Icon and text"
        },
        {
          "id": "icon",
          "name": "Icon only"
        },
        {
          "id": "text",
          "name": "Text only"
        }
      ],
      "default": "both"
    }
  ],
  "versionAdded": "1.4.0",
  "latestUpdate": {
    "version": "1.27.0",
    "newSettings": ["show"]
  }
}
