{
  "name": "Resizable comment input",
  "description": "Makes the comment input box vertically resizable in Scratch 3.0-styled pages.",
  "tags": ["community", "recommended", "theme"],
  "credits": [
    {
      "name": "Maximouse"
    }
  ],
  "injectAsStyleElt": true,
  "dynamicEnable": true,
  "dynamicDisable": true,
  "userstyles": [
    {
      "url": "userstyle.css",
      "matches": [
        "https://scratch.mit.edu/projects/*",
        "https://scratch.mit.edu/users/*/",
        "https://scratch.mit.edu/studios/*/comments"
      ]
    }
  ],
  "enabledByDefault": true,
  "l10n": true
}
