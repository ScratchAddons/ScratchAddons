{
  "name": "External player button",
  "description": "Adds buttons for viewing projects on forkphorus or other sites.",
  "credits": [
    {
      "name": "HTML-Fan/NT"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"],
      "runAtComplete": false
    }
  ],
  "options": [
    {
      "name": "Add forkphorus",
      "id": "forkphorus",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Add turbowarp",
      "id": "turbowarp",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Use colors",
      "id": "colors",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Replace stage",
      "id": "stage",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Click again to get to the page",
      "id": "again",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Replace the stage automatically when a recommendation in the instructions or notes is found (only works when \"Replace stage\" is turned on)",
      "id": "autoreplace",
      "type": "boolean",
      "default": true
    }
  ],
  "tags": ["community"],
  "enabled_by_default": false
}
