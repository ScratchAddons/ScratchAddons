{
  "name": "BBCode source button",
  "description": "Adds a button to the forums that shows the BBCode source of a post.",
  "tags": ["community", "forums"],
  "credits": [
    {
      "name": "Maximouse",
      "link": "https://scratch.mit.edu/users/Maximouse/"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/discuss/topic/*"]
    }
  ],
  "settings": [
    {
      "id": "display-type",
      "name": "Display type",
      "type": "select",
      "potentialValues": [
        { "id": "source", "name": "Show source in post" },
        { "id": "new-tab", "name": "Open in new tab" }
      ],
      "default": "source"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.9.0",
  "latestUpdate": {
    "isMajor": false,
    "version": "1.36.0",
    "newSettings": ["display-type"]
  }
}
