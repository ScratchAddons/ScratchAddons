{
  "name": "Customizable profile picture border",
  "description": "Allows you to hide or change the outline around profile pictures in project and studio comments and change their shape.",
  "credits": [
    {
      "name": "CST1229",
      "link": "https://github.com/CST1229"
    },
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "userstyles": [
    {
      "url": "hide_outline.css",
      "matches": ["https://scratch.mit.edu/projects/*", "https://scratch.mit.edu/studios/*"],
      "if": {
        "settings": {
          "hide-outline": true
        }
      }
    },
    {
      "url": "outline_color.css",
      "matches": ["https://scratch.mit.edu/projects/*", "https://scratch.mit.edu/studios/*"],
      "if": {
        "settings": {
          "hide-outline": false
        }
      }
    },
    {
      "url": "fill_transparent.css",
      "matches": ["https://scratch.mit.edu/projects/*", "https://scratch.mit.edu/studios/*"],
      "if": {
        "settings": {
          "fill-transparent": true
        }
      }
    },
    {
      "url": "scratchr2/hide_outline.css",
      "matches": ["https://scratch.mit.edu/users/*", "https://scratch.mit.edu/discuss/*"],
      "if": {
        "settings": {
          "hide-outline": true
        },
        "addonEnabled": ["scratchr2"]
      }
    },
    {
      "url": "scratchr2/outline_color.css",
      "matches": ["https://scratch.mit.edu/users/*", "https://scratch.mit.edu/discuss/*"],
      "if": {
        "settings": {
          "hide-outline": false
        },
        "addonEnabled": ["scratchr2"]
      }
    },
    {
      "url": "scratchr2/fill_transparent.css",
      "matches": ["https://scratch.mit.edu/users/*", "https://scratch.mit.edu/discuss/*"],
      "if": {
        "settings": {
          "fill-transparent": true
        },
        "addonEnabled": ["scratchr2"]
      }
    },
    {
      "url": "scratchr2/round.css",
      "matches": ["isNotScratchWWW"],
      "if": {
        "settings": {
          "round-style": ["square", "round", "circle"]
        }
      }
    },
    {
      "url": "round.css",
      "matches": ["scratchWWWNoProject", "projects"],
      "if": {
        "settings": {
          "round-style": ["square", "round", "circle"]
        }
      }
    }
  ],
  "customCssVariables": [
    {
      "name": "radius",
      "value": {
        "type": "map",
        "source": {
          "type": "settingValue",
          "settingId": "round-style"
        },
        "options": {
          "square": "0%",
          "round": "calc(var(--customizeAvatarBorder-radiusSetting) * 1%)",
          "circle": "50%"
        }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "injectAsStyleElt": true,
  "settings": [
    {
      "name": "Hide outline",
      "id": "hide-outline",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Fill transparent profile pictures",
      "id": "fill-transparent",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Outline color",
      "id": "outline-color",
      "type": "color",
      "allowTransparency": true,
      "default": "#4d97ff40",
      "if": {
        "settings": {
          "hide-outline": false,
          "fill-transparent": true
        }
      }
    },
    {
      "name": "Shape",
      "id": "round-style",
      "type": "select",
      "potentialValues": [
        {
          "id": "default",
          "name": "Default (don't change)"
        },
        {
          "id": "square",
          "name": "Square"
        },
        {
          "id": "round",
          "name": "Rounded square"
        },
        {
          "id": "circle",
          "name": "Circle"
        }
      ],
      "default": "default"
    },
    {
      "name": "Corner radius (%)",
      "id": "radiusSetting",
      "type": "integer",
      "min": 1,
      "max": 49,
      "default": 12,
      "if": {
        "settings": {
          "round-style": "round"
        }
      }
    }
  ],
  "tags": ["community", "theme"],
  "versionAdded": "1.18.0",
  "latestUpdate": {
    "version": "1.31.0",
    "newSettings": ["round-style"]
  },
  "enabledByDefault": false
}
