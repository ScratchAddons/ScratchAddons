{
  "name": "Scratch 3.0 \u2192 2.0",
  "description": "Makes Scratch 3.0-styled pages look like Scratch 2.0.",
  "tags": ["community", "theme", "featured"],
  "credits": [
    {
      "name": "Maximouse",
      "link": "https://scratch.mit.edu/users/Maximouse/"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "versionAdded": "1.41.0",
  "userstyles": [
    {
      "url": "main.css",
      "matches": ["projects", "projectEmbeds", "scratchWWWNoProject"]
