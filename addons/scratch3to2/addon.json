    {
      "url": "home.css",
      "matches": ["https://scratch.mit.edu/"]
    },
    {
      "url": "explore_and_search.css",
      "matches": ["https://scratch.mit.edu/explore/*", "https://scratch.mit.edu/search/*"]
    },
    {
      "url": "ideas.css",
      "matches": ["https://scratch.mit.edu/ideas"]
    },
    {
      "url": "about.css",
      "matches": ["https://scratch.mit.edu/about"]
    },
    {
      "url": "project.css",
      "matches": ["projects", "projectEmbeds"]
    },
    {
      "url": "studio.css",
      "matches": ["studios"]
    },
    {
      "url": "comments.css",
      "matches": ["projects", "studios"]
    },
    {
      "url": "messages.css",
      "matches": ["https://scratch.mit.edu/messages"]
    },
    {
      "url": "join.css",
      "matches": ["https://scratch.mit.edu/join"]
    },
    {
      "url": "info.css",
      "matches": [
        "https://scratch.mit.edu/faq",
        "https://scratch.mit.edu/contact-us",
        "https://scratch.mit.edu/terms_of_use",
        "https://scratch.mit.edu/privacy_policy",
        "https://scratch.mit.edu/privacy_policy/app",
        "https://scratch.mit.edu/privacy_policy/apps",
        "https://scratch.mit.edu/cookies",
        "https://scratch.mit.edu/DMCA",
        "https://scratch.mit.edu/research",
        "https://scratch.mit.edu/code-of-ethics"
      ]
    },
    {
      "url": "download.css",
      "matches": ["https://scratch.mit.edu/download"]
    }
  ]
}
