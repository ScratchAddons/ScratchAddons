{
  "name": "Scratch 2.0 \u2192 3.0",
  "description": "Makes Scratch 2.0-styled pages look like Scratch 3.0.",
  "tags": ["community", "theme", "recommended"],
  "credits": [
    {
      "name": "Maximouse",
      "link": "https://github.com/mxmou/customize-scratch#scratch-30-look-for-old-parts-of-the-website"
    }
  ],
  "customCssVariables": [
    {
      "name": "primaryColor-text",
      "value": {
        "type": "textColor",
        "black": "#575e75",
        "white": "#ffffff",
        "source": {
          "type": "settingValue",
          "settingId": "primaryColor"
        }
      }
    },
    {
      "name": "primaryColor-transparentText",
      "value": {
        "type": "textColor",
        "black": "#575e75b0",
        "white": "#ffffffb0",
        "source": {
          "type": "settingValue",
          "settingId": "primaryColor"
        }
      }
    },
    {
      "name": "primaryColor-filter",
      "value": {
        "type": "textColor",
        "black": "brightness(0.4)",
        "white": "none",
        "source": {
          "type": "settingValue",
          "settingId": "primaryColor"
        }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
