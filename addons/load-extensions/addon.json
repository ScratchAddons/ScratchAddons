{
  "name": "Automatically add extensions",
  "description": "Automatically adds the selected block extensions such as music or pen to the block category menu in the editor.",
  "info": [
    {
      "type": "notice",
      "text": "When the video or face sensing options are enabled the webcam will attempt to turn on every time the editor is opened.",
      "id": "webcam"
    },
    {
      "type": "notice",
      "text": "If an extension monitor, for example, the tempo is shown on the stage when a project is saved, that extension will stay in that project even after hiding all monitors and disabling this addon.",
      "id": "monitors"
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "settings": [
    {
      "name": "Music",
      "id": "music",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Pen",
      "id": "pen",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Video Sensing",
      "id": "videoSensing",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Face Sensing",
      "id": "faceSensing",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Text to Speech",
      "id": "text2speech",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Translate",
      "id": "translate",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Makey Makey",
      "id": "makeymakey",
      "type": "boolean",
      "default": false
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "versionAdded": "1.10.0",
  "latestUpdate": {
    "version": "1.44.0",
    "newSettings": ["videoSensing", "faceSensing", "makeymakey"]
  },
  "tags": ["editor", "codeEditor", "featured"]
}
