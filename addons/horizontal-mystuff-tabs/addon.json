  "tags": ["community", "theme"],
  "credits": [
    {
      "name": "Maximouse",
      "link": "https://scratch.mit.edu/users/Maximouse/"
    }
  ],
  "versionAdded": "1.25.0",
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["https://scratch.mit.edu/mystuff/*"]
    },
    {
      "url": "scratchr2.css",
      "matches": ["https://scratch.mit.edu/mystuff/*"],
      "if": {
        "addonEnabled": ["scratchr2"]
      }
    }
  ]
