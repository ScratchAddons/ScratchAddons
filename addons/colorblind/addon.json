{
  "name": "Customizable link style",
  "description": "Lets you customize the style of links around the website.",
  "credits": [
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "customCssVariables": [
    {
      "name": "tdecoOverride",
      "value": {
        "type": "map",
        "source": {
          "type": "settingValue",
          "settingId": "links"
        },
        "options": {
          "underline": "underline"
        }
      }
    }
  ],
  "userstyles": [
    {
      "url": "bold-links.css",
      "matches": ["https://scratch.mit.edu/*"],
      "if": {
        "settings": { "links": "bold" }
      }
    },
    {
      "url": "underline-links.css",
      "matches": ["https://scratch.mit.edu/*"],
      "if": {
        "settings": { "links": "underline" }
      }
    }
  ],
  "settings": [
    {
      "name": "Link style",
      "id": "links",
      "type": "select",
      "potentialValues": [
        {
          "id": "none",
          "name": "Default"
        },
        {
          "id": "bold",
          "name": "Bold"
        },
        {
          "id": "underline",
          "name": "Underlined"
        }
      ],
      "default": "underline"
    },
    {
      "name": "Underline style",
      "id": "underline-style",
      "type": "select",
      "potentialValues": [
        {
          "id": "solid",
          "name": "Solid"
        },
        {
          "id": "dashed",
          "name": "Dashed"
        },
        {
          "id": "dotted",
          "name": "Dotted"
        }
      ],
      "default": "solid",
      "if": {
        "settings": { "links": "underline" }
      }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "versionAdded": "1.34.0",
  "tags": ["community", "theme", "beta"],
  "enabledByDefault": false
}
